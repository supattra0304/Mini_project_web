                        </div>
                    </div>

                    <div class="button-container">
                        <input class="ab" type="button" value="Add" onclick="sendData()">
                    </div>
                </form>

                <div id="result">
                    <p id="dateDisplay"></p>
                </div>
            </div>
        </div>

        <%- include('includes/footer.ejs')%>

